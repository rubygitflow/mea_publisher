<div id="<%= dom_id post %>">
  <div class="mb-sm">
    <p>
      <strong>Author:</strong>
      <%= post.author_nickname %>
    </p>

    <p>
      <strong>Title:</strong>
      <%= post.title %>
    </p>
    
    <p>
      <strong>Body:</strong>
      <%= post.body %>
    </p>
  </div>

  <div class="text-sm post-footer">
    <div class="text-grey">
      <%= l(post.created_at, format: :short) %>
    </div>

    <% if !Rails.env.test? && current_user.present? %>
      <div>
        <%= link_to fa_icon('pencil'), edit_post_path(post),
          title: "Edit this post" %> |
        <%= button_to fa_icon('trash-o'), post_path(post), method: :delete,
          title: "Destroy this post" %>
      </div>
    <% end %>
  </div>
</div>
