<% end %>

<div class="container">
  <div class="text-title mb title-lg">
    <div>
      New post
    </div>

    <div>
      <%= link_to fa_icon('bars'), posts_path, title: "Back to posts" %>
    </div>
  </div>

  <%= render "form", post: @post %>
</div>
