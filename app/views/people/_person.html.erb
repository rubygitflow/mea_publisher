<div id="<%= dom_id person %>">
  <div class="mb-sm">
    <p>
      <strong>Name:</strong>
      <%= person.name %>
    </p>

    <p>
      <strong>Nickname:</strong>
      <%= person.nickname %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= person.email %>
    </p>
  </div>

  <div class="text-sm post-footer">
    <div class="text-grey">
      <%= l(person.created_at, format: :short) %>
    </div>

    <div>
      <%= link_to fa_icon('pencil'), edit_person_path(person),
        title: "Edit this post" %>
    </div>
  </div>
</div>
